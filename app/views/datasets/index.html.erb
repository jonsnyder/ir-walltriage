<p id="notice"><%= notice %></p>

<h2>Datasets</h2>

<% if @user.is_superuser -%>
  <% @datasets.each do |dataset| %>
  <p>
    <label><%= link_to dataset.name, dataset_url(dataset.id) %></label>
    <%= dataset.description -%>
    <b><%= dataset.is_user_dataset ? "User Dataset" : "System Dataset" -%></b>
    <%= link_to 'Tagging', posts_url( :dataset => dataset.id) -%>
    <%= link_to 'Edit', edit_dataset_path(dataset) %>
    <%= link_to 'Destroy', dataset, confirm: 'Are you sure?', method: :delete %>
  </p>
  <% end %>


  <p><%= link_to 'New Dataset', new_dataset_path %></p>
<% else -%>

  <% @datasets.each do |dataset| %>
    <p>
      <label><%= link_to dataset.name, posts_url(:dataset => dataset.id) %></label>
      <%= dataset.description -%>
    </p>
  <% end %>
  
<% end -%>
