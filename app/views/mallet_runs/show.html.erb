<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @mallet_run.name %>
</p>

<p>
  <b>Num topics:</b>
  <%= @mallet_run.num_topics %>
</p>

<p>
  <b>Num iterations:</b>
  <%= @mallet_run.num_iterations %>
</p>

<p>
  <b>Optimize burn in:</b>
  <%= @mallet_run.optimize_burn_in %>
</p>

<p>
  <b>Use symetric burn in:</b>
  <%= @mallet_run.use_symetric_burn_in %>
</p>

<p>
  <b>Alpha:</b>
  <%= @mallet_run.alpha %>
</p>

<p>
  <b>Dataset:</b>
  <%= @mallet_run.dataset %>
</p>

<p>
  <b>State:</b>
  <%= @mallet_run.state %>
</p>


<%= link_to 'Edit', edit_mallet_run_path(@mallet_run) %> |
<%= link_to 'Back', mallet_runs_path %>

<% @mallet_run.mallet_commands.each do |mallet_command| -%>
  <h4><%= mallet_command.command -%></h4>
  <% if mallet_command.stdout.size > 0 -%>
    <label>Stdout</label>
    <pre><%= mallet_command.stdout -%></pre>
  <% end -%>
  <% if mallet_command.stderr.size > 0 -%>
    <label>Sterr</label>
    <pre><%= mallet_command.stderr -%></pre>
  <% end -%>
  <% if mallet_command.exit_status != 0 -%>
    <label>Exit Status</label>
    <pre><%= mallet_command.exit_status -%></pre>
  <% end -%>
<% end -%>
