<h1>Listing stats</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Options</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stats.each do |stat| %>
  <tr>
    <td><%= stat.name %></td>
    <td><%= stat.description %></td>
    <td><%= stat.options %></td>
    <td><%= stat.type %></td>
    <td><%= link_to 'Show', stat %></td>
    <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
    <td><%= link_to 'Destroy', stat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

